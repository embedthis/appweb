{
    compiler: {
        c: {
            gcc: {
                flags: [
                    '-Wformat', '-Wformat-security', '-Wsign-compare', '-Wsign-conversion',
                    '-I../build/${PLATFORM}-${PROFILE}/inc', '-L../build/${PLATFORM}-${PROFILE}/bin'
                ],
                linux: {
                    flags: ['-Wl,-rpath,$ORIGIN/${CONFIGDIR}/../build/${PLATFORM}-${PROFILE}/bin'],
                },
                macosx: {
                    flags: ['-Wl,-rpath,@executable_path/${CONFIGDIR}/../build/${PLATFORM}-${PROFILE}/bin'],
                },
                libraries: ['appweb', 'esp', 'http', 'mpr', 'm', 'pcre', 'crypto', 'ssl'],
            },
            msvc: {
                flags: [
                    '-GR-', '-MDd', '-wd4100',
                    '/I../build/${PLATFORM}-${PROFILE}/inc', 
                    '/LIBPATH:../build/${PLATFORM}-${PROFILE}/bin',
                    '/I${ME_COM_OPENSSL_PATH}/include',
                    '/LIBPATH:${ME_COM_OPENSSL_PATH}/lib/VC/x64/MDd',
                    '/I${USERPROFILE}/vcpkg/installed/x64-windows/include',
                    '/LIBPATH:${USERPROFILE}/vcpkg/installed/x64-windows/lib',
                ],
                libraries: ['libappweb', 'libesp', 'libhttp', 'libmpr', 'libpcre', 'libcrypto', 'libssl', 
                'ws2_32.lib', 'advapi32.lib', 'user32.lib', 'kernel32.lib', 'oldnames.lib', 'shell32.lib'],
            },
        },
    },
    environment: {
        default: {
            PATH: '../build/${PLATFORM}-${PROFILE}/bin:${PATH}',
            BIN: '${../build/*/bin}',
            TM_HTTP: 'http://localhost:4100',
            TM_HTTPV6: 'http://[::1]:4100',
            TM_HTTPS: 'https://localhost:4443',
            TM_SELFCERT: 'https://localhost:5443',
            TM_CLIENTCERT: 'https://localhost:6443',
            TM_TESTCERT: 'https://localhost:7443',
            TM_NAMED: 'http://localhost:4200',
            TM_VIRT: 'http://localhost:4300',
            TM_HTTP_PORT: '4100',
        },
        windows: {
            PATH: '../build/${PLATFORM}-${PROFILE}/bin;C:/Program Files/OpenSSL;${USERPROFILE}/vcpkg/installed/x64-windows/bin;${PATH}',
        },
    },
    execution: {
        parallel: false,
    },
    services: {
        cleanup: './cleanup.sh',
        setup: './setup.sh',
        prep: './prep.sh',
        healthcheck: { url: 'http://localhost:4100/index.html' },
    },
}
